{
  "id": "sort_by_plays",
  "name": "Sort by Play Count",
  "description": "Sort a Spotify playlist by Last.fm play counts",
  "version": "1.1",
  "parameters": [
    {
      "name": "source_playlist_id",
      "type": "string",
      "required": true,
      "description": "Spotify playlist ID to sort"
    },
    {
      "name": "username",
      "type": "string",
      "required": false,
      "description": "Last.fm username for play counts (defaults to configured user)"
    },
    {
      "name": "target_name",
      "type": "string",
      "required": false,
      "description": "Name for the sorted playlist"
    }
  ],
  "tasks": [
    {
      "id": "source",
      "type": "source.spotify_playlist",
      "config": {
        "playlist_id": "{parameters.source_playlist_id}"
      }
    },
    {
      "id": "resolve",
      "type": "enricher.resolve_lastfm",
      "config": {
        "username": "{parameters.username}",
        "batch_size": 50,
        "concurrency": 5
      },
      "upstream": [
        "source"
      ]
    },
    {
      "id": "sort",
      "type": "sorter.sort_by_user_plays",
      "config": {
        "reverse": true,
        "min_confidence": 60
      },
      "upstream": [
        "resolve"
      ]
    },
    {
      "id": "destination",
      "type": "destination.create_spotify_playlist",
      "config": {
        "name": "{parameters.target_name|Sorted by Play Count}",
        "description": "Tracks sorted by Last.fm play count"
      },
      "upstream": [
        "sort"
      ]
    }
  ]
}